{
  "name": "Tab Manager v2",
	"description": "Quickly and conveniently manage your open tabs",
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Tab Manager v2",
    "default_icon": "icon-16.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+T",
        "mac": "MacCtrl+T",
        "chromeos": "Ctrl+T",
        "linux": "Ctrl+T"
      }
    },
    "LAST-ACTIVE-TAB": {
      "suggested_key": {
        "windows": "Ctrl+B",
        "mac": "MacCtrl+B",
        "chromeos": "Ctrl+B",
        "linux": "Ctrl+B"
      },
      "description": "Switch to next tab (recently used order)"
    }
  },
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "minimum_chrome_version": "60.0.3112",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
